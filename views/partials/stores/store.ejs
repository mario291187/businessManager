<form id="storeForm">
    <p>
        <label>Nombre de la tienda</label>
        <input name="nombre" class="form-control" required>
    </p>

    <p>
        <label>RFC</label>
        <input name="rfc" class="form-control" required>
    </p>
    <p>
        <label>Calle</label>
        <input type="text" class="form-control" name="direccion_calle" required>
    </p>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Número exterior</label>
                <input type="text" class="form-control" name="direccion_numero_ext" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Número interior</label>
                <input type="text" class="form-control" name="direccion_numero_int">
            </p>

        </div>
    </div>

    <p>
        <label>Colonia</label>
        <input type="text" class="form-control" name="direccion_colonia" required>
    </p>
    <p>
        <label>Localidad</label>
        <input class="form-control" type="text" name="direccion_localidad">
    </p>
    <p>
        <label>Municipio</label>
        <input type="text" class="form-control" name="direccion_municipio">
    </p>
    <p>
        <label>Ciudad</label>
        <input type="text" class="form-control" name="direccion_ciudad" required>
    </p>
    <p>
        <label>Estado</label>
        <input type="text" class="form-control" name="direccion_estado" required>
    </p>
    <p>
        <label>País</label>
        <input type="text" class="form-control" name = "direccion_pais" value="México" required>
    </p>
    <p>
        <button type="submit" class="btn btn-primary">Crear</button>
    </p>
</form>