
<h3>Resultados</h3>
<hr>
<% if (items.length> 0){
for (var i=0; i< items.length; i++){%>

<div class="panel panel-default">
    <div class="panel-body">

        <form>
            <h3>Artículo: </h3>
            <p style="color:#9e9e9e"><strong>Modelo:</strong> <%= items[i].modelo %> | <strong>Marca: </strong><%= items[i].nombre_prov %></p>
            <hr>
            <input class="form-control" type="text" value="<%= items[i].articulo %>" name="articulo" disabled>
            <p hidden>
            <input class="form-control" type="text" value="<%= items[i].modelo %>" name="modelo" hidden>
            </p>
            <input type="text" name="user_id" value="<%=user.id%>" data-user_id="<%=user.id%>" hidden>
            <input type="text" name="item_id" value="<%= items[i].id %>" hidden>

            <h3><span style="color:#9e9e9e"><strong>Precio Unitario:  </strong></span><span style="color:#E91E63"><strong><%= items[i].precio %></strong></span></h3>


            <a href="#" class="thumbnail" style="min-height: 200px; text-align:center; min-width: 200px;">
                <!--Aquí va la foto-->
                <img src="<%= '/item/' + items[i].nombre_imagen +'/image.jpg'%>"">
                <!--<i class="fa fa-picture-o fa-5x" aria-hidden="true"></i>-->
            </a>

            <label>Descripción:</label><p>
                <%= items[i].descripcion %></p>

            <label>Descuento:</label>
            <div class="row">
                <div class="col-sm-3">
                    <p>
                        <label class="radio-inline"><input type="radio" name="optradioDesc" checked value="0">0%</label>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p>
                        <label class="radio-inline"><input type="radio" name="optradioDesc" value="5">5%</label>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p>
                        <label class="radio-inline"><input type="radio" name="optradioDesc" value="10">10%</label>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p>
                        <label class="radio-inline"><input type="radio" name="optradioDesc" value="15">15%</label>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <p>
                        <label>Existencias:</label>
                        <input type="text" class="form-control" value="<%= items[i].n_existencias %>" disabled>
                    </p>
                </div>
                <div class="col-sm-6">
                    <p>
                        <label>Unidades:</label>
                        <input type="number" name="existencias" class="form-control" max="<%= items[i].n_existencias %>" min="1" value="1">
                    </p>
                </div>
            </div>

            <div class="row" style="visibility: hidden">
                <div class="col-sm-6">
                    <label>Estatus transacción:</label>
                    <select id="estatus" name="id_estatus" class="form-control">
                        <option value="">Entregada</option>
                        <option value="modificacion">Modificación</option>
                        <option value="pendiente">Pendiente</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <label>Monto que se deja a cuenta:</label>
                    <input type="number" name="monto_pagado" class="form-control" max="<%= items[i].precio * items[i].n_existencias%>" min="0" value="0">
                </div>
            </div>

            <br>
            <button type="submit" class="btn btn-default"> <i class="fa fa-cart-plus"></i></button>
        </form>
    </div>
</div>
<%}}else{%>

<div class="alert alert-warning">

    La búsqueda no retornó resultados
</div>
<%}%>