<form>
    <p>
        <label>Nombre de usuario</label>
        <input type="text" class="form-control" name="usuario" required>
    </p>
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Contraseña</label>
                <input type="password" class="form-control" name="contrasena" required>
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>Confirmar contraseña</label>
                <input type="password" class="form-control" name="confirmar_contrasena" required>
            </p>
        </div>
    </div>
    <p>
        <label>E-mail</label>
        <input type="email" class="form-control" name="email">
    </p>
    <p>
        <label>Nombre(s)</label>
        <input type="text" class="form-control" name="nombres">
    </p>
    <p>
        <label>Apellido paterno</label>
        <input type="text" class="form-control" name="apellido_paterno">
    </p>
    <p>
        <label>Apellido materno</label>
        <input type="text" class="form-control" name="apellido_materno">
    </p>
    <p>
        <label>RFC</label>
        <input type="text" class="form-control" name="rfc">
    </p>
    <p>
        <label>Calle</label>
        <input type="text" class="form-control" name="direccion_calle">
    </p>
    <p>
        <label>Número interior</label>
        <input type="text" class="form-control" name="direccion_numero_int">
    </p>
    <p>
        <label>Número exterior</label>
        <input type="text" class="form-control" name="direccion_numero_ext">
    </p>
    <p>
        <label>Colonia</label>
        <input type="text" class="form-control" name="direccion_colonia">
    </p>
    <p>
        <label>Localidad</label>
        <input type="text" class="form-control" name="direccion_localidad">
    </p>
    <p>
        <label>Municipio</label>
        <input type="text" class="form-control" name="direccion_municipio">
    </p>
    <p>
        <label>Ciudad</label>
        <input type="text" class="form-control" name="direccion_ciudad">
    </p>
    <p>
        <label>País</label>
        <input type="text" class="form-control" name="direccion_pais">
    </p>
    <div class="row">
        <div class="col-sm-3">
            <p>
                <label>¿Empleado?</label>
                <select class="form-control" name="empleado">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
            </p>
        </div>
        <div class="col-sm-9">
            <p>
                <label>Salario</label>
                <input type="number" class="form-control" name="salario">
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <p>
                <label>Tablero</label>
                <select class="form-control" name="permiso_tablero">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Administrador</label>
                <select class="form-control" name="permiso_administrador">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Vendedor</label>
                <select class="form-control" name="permiso_empleados">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Inventario</label>
                <select class="form-control" name="permiso_inventario">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>
    </div>


    <p>
        <button class="btn btn-primary" type="submit">Registrar</button>
    </p>

</form>