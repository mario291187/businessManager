<form id="updateUser">
    <input type="text" value="<%=user.id%>" name="id" hidden>
    <p>
        <label>Nombre de usuario</label>
        <input type="text" value="<%=user.usuario%>" class="form-control" name="usuario" disabled>
    </p>
