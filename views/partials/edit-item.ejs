<form id="itemForm">
    <!--id_proveedor
    id_tienda-->
    <input type="text" value="<%=item.id%>" name="id" hidden>
    <p>
        <label>articulo</label>
        <input type="text" value="<%=item.articulo%>" class="form-control" name="articulo" required>
    </p>
    <a href="#" class="thumbnail" style="min-height: 200px; text-align:center; min-width: 200px;">
        <!--Aquí va la foto-->
        <img src="<%= '/item/' + item.nombre_imagen +'/image.jpg'%>">
        <!--<i class="fa fa-picture-o fa-5x" aria-hidden="true"></i>-->
    </a>


    <p>
        <label>Descripcion</label>
        <input type="text" value="<%=item.descripcion%>" name="descripcion" class="form-control" required>
    </p>
    <p>
        <label>Proveedor</label>
        <select name="id_proveedor" class="form-control">
            <%
            if (proveedores.length > 0 ){
            for (var i =0; i < proveedores.length; i++){
            %>
            <option value="<%= proveedores[i].id %>" <%= item.id_proveedor == proveedores[i].id?'selected' : null %> > <%= proveedores[i].nombre %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguno</option>
            <% }%>
        </select>
    </p>

    <p>
        <label>Marca</label>
        <select class="form-control" name="id_marca" required>
            <% if (marcas.length > 0){
               for ( var i =0; i < marcas.length ; i++ ){%>
            <option value="<%= marcas[i].id %>" <%= ( item.id_marca == marcas[i].id )?'selected':null%> > <%= marcas[i].nombre %></option>
            <%}
            }else{
                %>
            <option value="">Ninguna</option>
            <%
            }%>
        </select>
    </p>
    <p>
        <label>Modelo</label>
        <input name="modelo" value="<%=item.modelo%>" type="text" class="form-control" required>
    </p>


    <p>
        <label>Tienda</label>
        <select name = "id_tienda" class="form-control" required>
            <%
            if (tiendas.length > 0 ){
            for (var i =0; i < tiendas.length; i++){
            %>
            <option value="<%= tiendas[i].id %>" <%= tiendas[i].id == item.id_tienda ? 'selected': null %> > <%= tiendas[i].nombre %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguna</option>
            <% }%>
        </select>
    </p>

    <p>
        <label>Talla</label>
        <input type="text" name="talla" value="<%= item.talla %>" class="form-control">
    </p>
    <p>
        <label>Notas</label>
        <input type="text" name="notas" value="<%= item.notas %>" class="form-control">
    </p>


    <div class="row">
        <div class="col-sm-4">
            <p>
                <label>Costo unitario</label>
                <input type="number" id="costo" name="costo" step="any" value="<%= item.costo %>" class="form-control">
            </p>
            <p hidden>
                <input type="number" id="costo_anterior" name="costo_anterior" step="any" value="<%= item.costo %>" class="form-control" hidden>
            </p>
        </div>
    <div class="col-sm-4">
        <p>
            <label>Precio unitario</label>
            <input type="number" id="precio" name="precio" step="any" value="<%= item.precio %>" class="form-control">
        </p>
    </div>
    <div class="col-sm-4">
        <p>
            <label>Número de existencias</label>
            <input type="number" min="0" class="form-control" value="<%= item.n_existencias%>" name="n_existencias">
        </p>
        <p hidden>
            <input type="number" id="existencias_anterior" name="existencias_anterior" step="any" value="<%= item.n_existencias %>" class="form-control" hidden>
        </p>
    </div>
    </div>

    <p>
        <label>Fotografía</label>
        <input class="form-control" type="file" name="imagen" id="imagen" accept="image/*" required>
    </p>
    <!--
    <p>
        <label>Código de barras</label>
        <input type="number" class="form-control" name="codigo_barras">
    </p>
    -->

    <div class="row">
        <div class="col-md-2">
            <p>
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </p>
        </div>
       <div class="col-md-3">
           <p>
               <button id="deleteitem" type="button" class="btn btn-primary" data-id="<%= item.id %>">Eliminar</button>
           </p>
       </div>

    </div>


</form>

<script>
    $("#costo").on("keyup", function(){
        $("#precio").val($("#costo").val()*2);
    })
</script>