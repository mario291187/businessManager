<form>

    <p>
        <label>Seleccione un proveedor</label>
        <select class="form-control" name="id_proveedor">
            <%for ( var i=0; i < proveedores.length; i++){%>
            <option value="<%= proveedores[i].id %>"><%= proveedores[i].nombre %></option>
            <%}%>
        </select>
    </p>


    <p>
        <label>Seleccione la marca</label>
        <select class="form-control" name="id_marca">
            <%for ( var i=0; i < marcas.length; i++){%>
            <option value="<%= marcas[i].id %>"><%= marcas[i].nombre %></option>
            <%}%>
        </select>
    </p>

    <label>Nombre Artículo</label>
    <p>
        <input type="text" class="form-control" name="articulo" placeholder="Artículo...">
    </p>
    <p>
        <label>Seleccione el modelo</label>
        <input type="text"  class="form-control" name="modelo" placeholder="Modelo...">
    </p>

    <label>Seleccione el periodo de búsqueda</label>
    <div class="row">

        <div class="col-sm-6">
            <p>
                <input type="text" name="init_date" id="notes_datepicker1" class="form-control">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <input type="text" name="end_date" id="notes_datepicker2" class="form-control">
            </p>
        </div>
    </div>

    <p>
        <button type="submit" class="btn btn-default">Buscar</button>
    </p>

</form>

<div id = "search_results">

</div>