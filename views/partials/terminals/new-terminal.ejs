<form id="terminalForm">
    <p>
        <label>Banco</label>
        <input name="banco" type="text" class="form-control" required>
    </p>
    <p>
     <label>Nombre del facturador</label>
        <input name="nombre" class="form-control" required>
    </p>

    <p>
    <label>RFC del facturador</label>
    <input name="rfc" class = "form-control">
    </p>
     <p>
            <label>Tienda</label>
            <select name = "id_tienda" class="form-control" required>
                <%
                if (tiendas.length > 0 ){
                for (var i =0; i < tiendas.length; i++){
                %>
                <option value="<%= tiendas[i].id %>"> <%= tiendas[i].nombre %> </option>
                <%
                }
                }else {
                %>
                <option value="">Ninguna</option>
                <% }%>
            </select>
        </p>
    <p>
        <button type="submit" class="btn btn-primary">Crear</button>
    </p>
</form>