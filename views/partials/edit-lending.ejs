<form id="lendingForm">
    <p>
        <label>Tienda</label>
        <select name="id_tienda" class="form-control">
            <%
            if (tiendas.length > 0 ){
            for (var i =0; i < tiendas.length; i++){
            %>
            <option value="<%= tiendas[i].id %>" <%= tiendas[i].id == terminal.id_tienda ? 'selected': null %> > <%= tiendas[i].nombre %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguna</option>
            <% }%>
        </select>
    </p>
    <p>
        <label>Nombre del empleado</label>
        <select name = "id_usuario" class="form-control" required>
            <%
            if (usuarios.length > 0 ){
            for (var i =0; i < usuarios.length; i++){
            %>
            <option value="<%= usuarios[i].id %>"> <%= usuarios[i].nombres %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguno</option>
            <% }%>
        </select>
    </p>

    <p>
        <label>Monto del préstamo</label>
        <input name="monto" class = "form-control">
    </p>

    <p>
        <label>Descripción</label>
        <input name="desc" class = "form-control">
    </p>
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Fecha préstamo</label>
                <input type="text" name="fecha_prestamo" id="lending_datepicker1" class="form-control" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Fecha liquidación</label>
                <input type="text" name="fecha_liquidacion" id="lending_datepicker2" class="form-control" required>
            </p>
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-primary">Crear</button>
    </p>
</form>