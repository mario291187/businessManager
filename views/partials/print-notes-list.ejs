<%
if (sales.length > 0){%>
<div class="list-group">
    <% for ( var i =0; i < sales.length ; i ++ ){ %>
    <div class="panel panel-default">
        <div class="panel-heading" name="item_name">
            <strong><%= sales[i].fecha_venta.toLocaleString() %></strong>
        </div>
        <div class="panel-body">

            <form>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="list-group-item-text"> <h3><strong>Nota:</strong></h3></p>
                    </div>
                    <div class="col-sm-1">
                        <p class="list-group-item-text"> <h3><%= sales[i].id %></h3></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="list-group-item-text"> <h3><strong>Saldo Pendiente:</strong></h3></p>
                    </div>
                    <div class="col-sm-1">
                        <p class="list-group-item-text"><%= sales[i].saldo_pendiente %></p>
                    </div>
                </div>
                <!--
                Si hay saldo con tarjeta, se debe imprimir por default.
                -->
                <h2 style="color:#E0E0E0"><strong>Imprimir:</strong></h2>
                <input type="checkbox" name="print" value="print">
                <p>
                <button class="btn btn-default" type="button" data-note_id="<%= sales[i].id %>"> <i class="fa fa-print"></i> </button>
                </p>
            </form>
        </div>
    </div>
    <%}%>
</div>

<% include pagination.ejs %>

<%}else {%>
<div class="alert alert-info" role="alert">No hay ventas registradas</div>
<%}%>