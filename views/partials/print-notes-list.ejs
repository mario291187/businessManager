<%
if (sales.length > 0){%>
<div class="list-group">
    <% for ( var i =0; i < sales.length ; i ++ ){ %>
    <div class="panel panel-default">
        <div class="panel-heading" name="item_name">
            <strong><%= sales[i].fecha_venta %></strong>
        </div>
        <div class="panel-body">

            <form>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="list-group-item-text"> <h3><strong>Nota:</strong></h3></p>
                    </div>
                    <div class="col-sm-1">
                        <p class="list-group-item-text"> <h3><%= sales[i].id %></h3></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="list-group-item-text"> <h3><strong>Saldo Pendiente:</strong></h3></p>
                    </div>
                    <div class="col-sm-1">
                        <p class="list-group-item-text"><%= sales[i].saldo_pendiente %></p>
                    </div>
                </div>
                <!--
                Si hay saldo con tarjeta, se debe imprimir por default.
                -->
                <label> Imprimir: <input type="checkbox" name="print" value="print"></label>
            </form>
        </div>
    </div>
    <%}%>
</div>

<% include pagination.ejs %>

<%}else {%>
<div class="alert alert-info" role="alert">No hay ventas registradas</div>
<%}%>