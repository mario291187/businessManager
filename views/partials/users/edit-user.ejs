<form id="updateUser">
    <input type="text" value="<%=user.id%>" name="id" hidden>
    <label>Usuario</label>
    <div class="row">

        <div class="col-sm-9">
            <p>
                <input type="text" value="<%=user.usuario%>" class="form-control" name="usuario" disabled>
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <button type="button" id="deleteuser" data-id="<%= user.id %> "class="btn btn-primary"><i class="fa fa-trash"></i> Eliminar</button>
            </p>
        </div>
    </div>


<!--
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Contraseña</label>
                <input type="text" class="form-control" name="contrasena" required>
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>Confirmar contraseña</label>
                <input type="text" class="form-control" name="confirmar_contrasena" required>
            </p>
        </div>
    </div>
    -->
    <p>
        <label>E-mail</label>
        <input type="email" value="<%=user.email%>" class="form-control" name="email">
    </p>
    <p>
        <label>Nombre(s)</label>
        <input type="text" value="<%=user.nombres%>" class="form-control" name="nombres" required>
    </p>
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Apellido paterno</label>
                <input type="text" value="<%=user.apellido_paterno%>" class="form-control" name="apellido_paterno" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Apellido materno</label>
                <input type="text" value="<%=user.apellido_materno%>" class="form-control" name="apellido_materno" required>
            </p>
        </div>
    </div>


    <p>
        <label>RFC</label>
        <input type="text" value="<%=user.rfc%>" class="form-control" name="rfc">
    </p>
    <p>
        <label>Calle</label>
        <input type="text" value="<%=user.direccion_calle%>" class="form-control" name="direccion_calle">
    </p>
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Número interior</label>
                <input type="text" value="<%=user.direccion_numero_int%>" class="form-control" name="direccion_numero_int">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Número exterior</label>
                <input type="text" value="<%=user.direccion_numero_ext%>"  class="form-control" name="direccion_numero_ext">
            </p>
        </div>

    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Colonia</label>
                <input type="text" value="<%=user.direccion_colonia%>" class="form-control" name="direccion_colonia">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Localidad</label>
                <input type="text" value="<%=user.direccion_localidad%>" class="form-control" name="direccion_localidad">
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Municipio</label>
                <input type="text" value="<%=user.direccion_municipio%>" class="form-control" name="direccion_municipio">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Ciudad</label>
                <input type="text" value="<%=user.direccion_ciudad%>" class="form-control" name="direccion_ciudad">
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Estado</label>
                <input type="text" value="<%=user.direccion_estado%>" class="form-control" name="direccion_estado">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>País</label>
                <input type="text" value="<%=user.direccion_pais%>" class="form-control" name="direccion_pais">
            </p>
        </div>
    </div>

        <p>
            <label>Tienda</label>
            <select name="id_tienda" class="form-control" required>
                <%
                if (tiendas.length > 0 ){
                for (var i =0; i < tiendas.length; i++){
                %>
                <option value="<%= tiendas[i].id %>" <%= tiendas[i].id == user.id_tienda ? 'selected': null %> > <%= tiendas[i].nombre %> </option>
                <%
                }
                }else {
                %>
                <option value="">Ninguna</option>
                <% }%>
            </select>
        </p>


    <div class="row">
        <div class="col-sm-3">
            <p>
                <label>¿Es empleado?</label>
                <select class="form-control" name="empleado">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
            </p>
        </div>

        <div class="col-sm-3">
            <p>
                <label>Salario</label>
                <input type="number" step="any" class="form-control" name="salario" value="<%= user.salario%>">
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Hora de entrada</label>
                <input type="text" class="form-control" id="timepicker1" name="llegada" value="<%= user.hora_llegada%>">
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Hora de salida</label>
                <input type="text" class="form-control" id="timepicker2" name="salida" value="<%= user.hora_salida%>">
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <p>
                <label>Vendedor</label>
                <select class="form-control" name="permiso_empleados">
                    <option value="true" <%= user.permiso_empleados?'selected':''%> >Sí</option>
                    <option value="false" <%= !user.permiso_empleados?'selected':''%>>No</option>
                </select>
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                <label>Inventario</label>
                <select class="form-control" name="permiso_inventario">
                    <option value="false" <%= !user.permiso_inventario?'selected':''%>>No</option>
                    <option value="true" <%= user.permiso_inventario?'selected':''%>>Sí</option>
                </select>
            </p>
        </div>


        <div class="col-sm-3">
            <p>
                <label>Administrador</label>
                <select class="form-control" name="permiso_administrador">
                    <option value="false" <%= !user.permiso_administrador?'selected':''%>>No</option>
                    <option value="true" <%= user.permiso_administrador?'selected':''%>>Sí</option>
                </select>
            </p>
        </div>

        <div class="col-sm-3">
            <p>
                <label>Tablero</label>
                <select class="form-control" name="permiso_tablero">
                    <option value="false" <%= !user.permiso_tablero?'selected':''%>>No</option>
                    <option value="true" <%= user.permiso_tablero?'selected':''%>>Sí</option>
                </select>
            </p>
        </div>
    </div>
    
        <p>
            <button class="btn btn-primary" type="submit"> <i class="fa fa-save"></i> Actualizar</button>
        </p>



</form>