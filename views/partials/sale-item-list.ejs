<h3>Articulo: </h3>
<%
if (items.length > 0){%>
<div class="list-group">
    <br>
    <% for ( var i =0; i < items.length ; i ++ ){ %>
    <a href="#" class="list-group-item" data-item_id="<%= items[i].id %>">
        <h4 class="list-group-item-heading"> <%= items[i].articulo %></h4>
        <p class="list-group-item-text"><%= items[i].descripcion %></p>
    </a>
    <%}%>
</div>

<% include pagination.ejs %>

<%}else {%>
<div class="alert alert-info" role="alert">No hay articulos registrados</div>
<%}%>

<label class="col-lg-12">Descuento aplicable:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group ">
            <div class="col-lg-12">
                <label class="radio-inline"><input type="radio" name="optradioDesc">5%</label>
                <label class="radio-inline"><input type="radio" name="optradioDesc">10%</label>
                <label class="radio-inline"><input type="radio" name="optradioDesc">15%</label>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-12">
                <label for="otroDesc">Otro:</label>
                <input type="text" id="otroDesc" name="otroDesc" class="form-control " placeholder="E.j. 20%" >
            </div>
        </div>
    </div>
    <br>
</div>

<label class="col-lg-12">Forma de pago:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group ">
            <div class="col-lg-12">
                <label class="radio-inline"><input type="radio" name="optradioPago">Efectivo</label>
                <label class="radio-inline"><input type="radio" name="optradioPago">Tarjeta</label>
            </div>
        </div>
    </div>
    <br>
</div>

<label class="col-lg-12">Nombre terminal:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group">
            <select class="form-control" id="sel1">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
    </div>
</div>


