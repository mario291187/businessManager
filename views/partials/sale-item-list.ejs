<h3>Articulo: </h3>

<input type="text" value="<%=users[0].id%>" data-user_id="<%= users[0].id %>" name="id" hidden> <!--CHANGE 0 FOR OTHER PARAMETER-->

<%
if (items.length > 0){%>
<div class="list-group">
    <br>
    <% for ( var i =0; i < items.length ; i ++ ){ %>
    <a href="#" class="list-group-item" data-item_id="<%= items[i].id %>">
        <h4 class="list-group-item-heading"> <%= items[i].articulo %></h4>
        <p class="list-group-item-text"><strong>Descripci√≥n: </strong><%= items[i].descripcion %> | <strong>Existencias: </strong><%= items[i].n_existencias %></p>
    </a>
    <%}%>
</div>

<% include pagination.ejs %>

<%}else {%>
<div class="alert alert-info" role="alert">No hay articulos registrados</div>
<%}%>

<label class="col-lg-12">Descuento aplicable:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group ">
            <div class="col-lg-12">
                <label class="radio-inline"><input type="radio" name="optradioDesc" checked="" value="5">5%</label>
                <label class="radio-inline"><input type="radio" name="optradioDesc" value="10">10%</label>
                <label class="radio-inline"><input type="radio" name="optradioDesc" value="15">15%</label>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-12">
                <label for="otroDesc">Otro:</label>
                <input type="text" id="otroDesc" name="otroDesc" class="form-control " placeholder="E.j. 20%" >
            </div>
        </div>
    </div>
    <br>
</div>

<label class="col-lg-12">Forma de pago:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group ">
            <div class="col-lg-12">
                <label class="radio-inline"><input type="radio" name="optradioPago" checked="" value="1">Efectivo</label>
                <label class="radio-inline"><input type="radio" name="optradioPago" value="0">Tarjeta</label>
            </div>
        </div>
    </div>
    <br>
</div>

<label class="col-lg-12">Nombre terminal:</label>
<div class="col-lg-12">
    <div class="form-inline">
        <div class="form-group">
            <select id="terminales" name="id_terminales" class="form-control">
                <%
                if (terminales.length > 0 ){
                for (var i =0; i < terminales.length; i++){
                %>
                <option value="<%= terminales[i].id %>"> <%= terminales[i].nombre_facturador %> </option>
                <%
                }
                }else {
                %>
                <option value="">Ninguno</option>
                <% }%>
            </select>
        </div>
    </div>
</div>


