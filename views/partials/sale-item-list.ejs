<h3>Articulos </h3>

<input type="text" value="<%=users[0].id%>" data-user_id="<%= users[0].id %>" name="id" hidden> <!--CHANGE 0 FOR OTHER PARAMETER-->

<%
if (items.length > 0){%>
<% for ( var i =0; i < items.length ; i ++ ){ %>
<div class="panel panel-default">
    <div class="panel-heading">
         <%= items[i].articulo %>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">

                    <label>Descripción:</label><p>
                    <%= items[i].descripcion %></p>
            </div>
            <div class="col-sm-6">

                <a href="#" class="thumbnail" style="height: 200px">
                    Aquí va la foto
                    <img src="">
                </a>
            </div>
        </div>


        <label>Descuento aplicable:</label>

        <div class="row">
            <div class="col-sm-4">
                <p>
                <label class="radio-inline"><input type="radio" name="optradioDesc" checked="" value="5">5%</label>
                </p>
            </div>
            <div class="col-sm-4">
                <p>
                <label class="radio-inline"><input type="radio" name="optradioDesc" value="10">10%</label>
                </p>
            </div>
            <div class="col-sm-4">
                <p>
                <label class="radio-inline"><input type="radio" name="optradioDesc" value="15">15%</label>
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">

                <p>
                    <label>Existencias:</label>
                    <input type="text" class="form-control" value="<%= items[i].n_existencias %>" disabled>
                </p>
            </div>
            <div class="col-sm-6">
                <p>
                    <label>Unidades:</label>
                    <input type="number" class="form-control" max="<%= items[i].n_existencias%>" min="1" value="1">
                </p>

            </div>
        </div>



        <button class="btn btn-default" data-item_id="<%= items[i].articulo %>"> <i class="fa fa-cart-plus"></i></button>

    </div>
</div>
<%}%>

<% include pagination.ejs %>

<%}else {%>
<div class="alert alert-info" role="alert">No hay articulos registrados</div>
<%}%>


<div class="row">
    <div class="col-sm-6">
        <label>Estatus transacción:</label>
        <select id="estatus" name="id_estatus" class="form-control">
            <option value="venta">Venta directa</option>
            <option value="modificacion">Modificación</option>
            <option value="devolucion">Devolución a proveedores</option>
        </select>
    </div>
    <div class="col-sm-6">
        <div id="montoPagado" style="visibility: hidden">
            <label>Monto:  </label>
            <input type="text" class="form-control" id="monto" value="000.00">
        </div>
    </div>
</div>

<br>

<div class="row">
    <div class="col-sm-6">
        <label>Forma de pago:</label>
        <p>
        <label id="pagoEfectivo" class="radio-inline"><input type="radio" name="optradioPago" checked="" value="1">Efectivo</label>
        <label id="pagoTarjeta"  class="radio-inline"><input type="radio" name="optradioPago" value="0">Tarjeta</label>
        </p>
    </div>
    <div class="col-sm-6">
        <div id="listTerminal" style="visibility: hidden">
            <label>Terminal:  </label>
            <p>
            <select id="terminales" name="id_terminales" class="form-control">
                <%
                if (terminales.length > 0 ){
                for (var i =0; i < terminales.length; i++){
                %>
                <option value="<%= terminales[i].id %>"> <%= terminales[i].nombre_facturador %> </option>
                <%
                }
                }else {
                %>
                <option value="">Ninguno</option>
                <% }%>
            </select>
            </p>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $("#pagoTarjeta").click(function() {
            $("#listTerminal").css('visibility', 'visible');
        });
        $("#pagoEfectivo").click(function() {
            $("#listTerminal").css('visibility', 'hidden');
        });
        $("#estatus").change(function() {
            if (document.getElementById('estatus').options[document.getElementById("estatus").selectedIndex].value == "modificacion") {
                alert("Favor de ingresar el monto que se dejará a cuenta para la modificación de la prenda.");
                $("#montoPagado").css('visibility', 'visible');
            }else{
                $("#montoPagado").css('visibility', 'hidden');
            }
        });
    });
</script>
