

<%
if ( suppliers.length > 0){%>
<div class="list-group">
    <%
    for ( var i =0; i < suppliers.length ; i ++ ){ %>
    <a href="#" class="list-group-item" data-supplier_id="<%= suppliers[i].id %>">
        <h4 class="list-group-item-heading"> <%= suppliers[i].nombre %></h4>
        <p class="list-group-item-text"><%= suppliers[i].razon_social %></p>
    </a>
    <%}%>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination">

        <li class="<%= pageNumber > 0 ? null : 'disabled'%>">
            <a href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>


        <%for (var i=0; i< numberOfPages; i ++){%>
        <li class="<%= i==pageNumber?'active': null%>">
            <a href="#"><%= i + 1%></a>
        </li>
        <%}%>

        <li class="<%= pageNumber < (numberOfPages - 1) ? null : 'disabled'%>">
            <a href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>

<%} else {%>
<div class="alert alert-info" role="alert">No se han registrado proveedores</div>
<%}%>


